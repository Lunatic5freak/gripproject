<%layout('./layouts/layouts.ejs')%>
<div class="container">
    <h4>Name:<%=user.name%></h4>
    <h4>Email:<%=user.email%></h4>
    <h4>Balance:<%=user.balance%></h4>
</div>
<div class="container">
    <form action="/api/user/" method="post">
        <input type="text" name="from" id="from" hidden value="<%=user.email%>">
        <div class="form-group">
            <label for="to">email</label>
            <input type="text" name="to" id="to" class="form-control" placeholder="Enter the recepiant email">
        </div>
        <div class="form-group">
            <label for="amt">Amount</label>
            <input type="text" name="amt" id="amt" class="form-control" placeholder="Enter the amount">
        </div>
        <input type="submit" value="Send" class="btn btn-primary btn-block">
    </form>
</div>